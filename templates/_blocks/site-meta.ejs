  <div class="sidebar-item">
    <p class="site-author-name">文章分类</p>
  </div>
  <div>
    <ul class="site-meta-tags">
      <% site.tags.forEach(function(tag) { %>
        <li >
          <a  href="<%= tag.link %>">
            <%=tag.name %>
          </a>
        </li>

      <% }); %>
    </ul>
     
  </div>

</div>


