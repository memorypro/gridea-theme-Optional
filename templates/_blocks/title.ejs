<header class="post-header">
  <h1 class="post-title">
    <a class="post-title-link" href="<%= link %>">
      <%= title %>
    </a>
  </h1>
  <div class="post-meta">
    <span class="meta-item">
      <i class="iconfont icon-calendar_empty"></i>
      <span class="pc-show">发布于</span>
      <span><%= dateFormat %></span>
    </span>
    <%if (tags && tags.length > 0) { %>
      <span class="meta-item">
        <span class="post-meta-divider">|</span>
        <i class="iconfont icon-folder_open_alt"></i>
        <span class="pc-show">分类于</span>
        <% for(let i = 0; i < tags.length; i ++) { %>
          <%if (i === tags.length - 1) { %>
            <a href="<%= tags[i].link %>">
              <span><%= tags[i].name %></span>
            </a>
          <% } else { %>
            <a href="<%= tags[i].link %>">
              <span><%= tags[i].name %></span>
            </a>、
          <% } %>
        <% } %>
      </span>
    <% } %>
    <span class="meta-item">
      <span class="post-meta-divider">|</span>
      <i class="iconfont icon-time"></i>
      <span><%= stats.minutes %>分钟</span>
    </span>
    <span class="meta-item">
      <span class="post-meta-divider">|</span>
      <i class="iconfont icon-keyboard"></i>
      <span class="pc-show"><%= stats.words %>字数</span>
    </span>
  </div>
</header>